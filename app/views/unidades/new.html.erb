<h1>Nova Unidade</h1>

<%= form_with(model: @unidade, local: true) do |form| %>
  <div>
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :descricao %>
    <%= form.text_area :descricao %>
  </div>

  <!-- Campo para selecionar setores -->
  <div>
  <%= form.label :setor_ids, "Setores" %>
  <%= form.collection_select :setor_ids, Setor.all, :id, :nome, { prompt: "Selecione os Setores" }, { multiple: true } %>
</div>

  <div>
    <%= form.submit 'Criar Unidade', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Voltar', unidades_path, class: 'btn btn-secondary' %>
