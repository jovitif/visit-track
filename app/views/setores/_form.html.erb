<%= form_with(model: @setor, url: setores_path) do |f| %>
  <div>
    <%= f.label :nome %>
    <%= f.text_field :nome, required: true %>
  </div>

  <div>
    <%= f.label :descricao %>
    <%= f.text_area :descricao, required: true %>
  </div>

  <div>
    <%= f.label :unidade_id, "Unidade" %>
    <%= f.collection_select :unidade_id, Unidade.all, :id, :nome, prompt: "Selecione uma unidade", required: true %>
  </div>

  <div>
    <%= f.submit "Salvar Setor", class: "btn btn-primary" %>
  </div>
<% end %>