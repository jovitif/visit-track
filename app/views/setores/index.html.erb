<h1>Setores</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Funcionários</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @setores.each do |setor| %>
      <tr>
        <td><%= setor.nome %></td>
        <td><%= setor.descricao %></td>
        <td>
          <% setor.funcionarios.each do |funcionario| %>
            <%= funcionario.nome %> <br>
          <% end %>
        </td>
        <td>
        <%= link_to "Ver", setore_path(setor) %> |
        <%= link_to "Editar", edit_setore_path(setor) %> |
        <%= link_to "Excluir", setore_path(setor), method: :delete, data: { confirm: "Tem certeza?" } %>
                </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Setor', new_setore_path %>
